@model Message

<section id="contact" class="s-contact target-section">
    <style>
        .s-contact {
            background-color: #36454F;
            background-repeat: no-repeat;
            background-image: url("../images/contact-bg.jpg");
            background-position: center, center;
            padding-top: 13.2rem;
            padding-bottom: 12rem;
            color: (54,69,79,0.5);
            position: relative;
        }
    </style>
    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İLETİŞİM</h3>
            <h1>Bana Ulaşın.</h1>

            <p class="lead">Aşağıda herhangi bir konu hakkında benimle iletişime geçebilirsiniz.</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form  method="post" asp-action="Index" asp-controller="Default">
                <fieldset>

                    <div class="form-field">
                        <input asp-for="NameSurname"  type="text" id="contactName" placeholder="Name" value="" minlength="2" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input asp-for="Email"  type="email" id="contactEmail" placeholder="Email" value="" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input asp-for="Subject"  type="text" id="contactSubject" placeholder="Subject" value="" class="full-width">
                    </div>
                    
                    <div class="form-field">
                        <textarea asp-for="MessageDetail"  id="contactMessage" placeholder="Message" rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
                    </div>
                    
                    <div class="form-field">
                        <button class="full-width btn--primary" id="btn1" >Submit</button>
                        <div class="submit-loader">
                            <div class="text-loader">Sending...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
               
            </form>

            
           
            

        </div>
        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Telefon</h4>
            <p>
                
                Mobile: @ViewBag.phone1<br>
                
            </p>

            <h4 class="h06">Email</h4>
            <p>
                @ViewBag.email1<br>
                @ViewBag.email2<br/>
                
            </p>
            <h4 class="h06">Linkedin</h4>
            <p>
                <a href="@ViewBag.linkedin">Linkedin'e gitmek için tıklayınız.</a><br>
               
                

            </p>
            <h4 class="h06">Github</h4>
            <p>
                <a href="@ViewBag.github">Github'a gitmek için tıklayınız.</a><br>
                
                

            </p>

            <h4 class="h06">Adres</h4>
            <p>
                @ViewBag.adres1<br>
                @ViewBag.adres2  <br>
                @ViewBag.adres3
            </p>
        </div>

    </div>

</section>