@model List<MyPortfolio.DAL.Entities.Feature>
<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/ktvbby4.jfif" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>
    
    @foreach(var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">
                <br />
                <img src="~/hola-master/images/last.jpeg" alt="My Photo" width="250" height="250" /><br />
                <h3>@item.Title</h3>

                <h1>
                    @*Ben Sultannur KAYA. <br>
                    Bilgisayar Mühendisi <br>*@
                    @item.Description

                </h1>

                <div class="home-content__buttons">
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                    
                    <a href="#project" class="smoothscroll btn btn--stroke">
                        İş Deneyimi
                    </a>
                    
                    
                    
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>

        </div> <!-- end home-content -->
        
    }

   

    <ul class="home-social">
        <li>
            <a href="@ViewBag.linkedin"><i class="im im-linkedin" aria-hidden="true"></i><span>Linkedin</span></a>
        </li>
        <li>
            <a href="@ViewBag.github"><i class="im im-github" aria-hidden="true"></i><span>Github</span></a>
        </li>
        
        
    </ul>
    <!-- end home-social -->

</section>