@model List<MyPortfolio.DAL.Entities.Experience>
<section id="project">
<div class="row about-content about-content--timeline">
    
    <div class="col-full text-center">
        <h3>İş ve Proje Deneyimlerim</h3>
    </div>

   
            
            @foreach(var item in Model)
            {

                if(item.ExperienceId%2==1)
               {
              <div class="col-six tab-full left">
                <div class="timeline">
                    <div class="timeline__block">
                        <div class="timeline__bullet"></div>
                        <div class="timeline__header">
                            <p class="timeline__timeframe">@item.Date</p>
                            <h3>@item.Head</h3>
                            <h5>@item.Title</h5>
                        </div>
                        <div class="timeline__desc">
                            <p>
                                <img style="width:500px;height:250px" src="@Url.Content(item.ImgUrl)" alt="Logo" /><br />
                                @item.Description<br />
                                <b><a style="color:DodgerBlue;" href="@item.ProjectUrl">Projenin Github linki için tıklayınız.</a></b>
                            </p>
                        </div>
                    </div> <!-- end timeline__block -->
                </div> <!-- end timeline -->
            </div> <!-- end left -->
            <br />

        }
        else if (item.ExperienceId == 6)
        {          <div class="col-six tab-full right">
                        <div class="timeline">
                    <div class="timeline__block">
                        <div class="timeline__bullet"></div>
                        <div class="timeline__header">
                            <p class="timeline__timeframe">@item.Date</p>
                            <h3>@item.Head</h3>
                            <h5>@item.Title</h5>
                        </div>
                        <div class="timeline__desc">
                            <p>
                                <img style="width:200px;height:300px;" src="@Url.Content(item.ImgUrl)" alt="Logo" /><br />
                                @item.Description<br />
                                <b><a style="color:DodgerBlue;" href="@item.ProjectUrl">Projenin Github linki için tıklayınız.</a></b>
                            </p>
                        </div>
                    </div> <!-- end timeline__block -->
                </div> <!-- end timeline -->
            </div> <!-- end right -->
            <br />
        }

        else if(item.ExperienceId%2==0 && item.ExperienceId != 6)
        { <div class="col-six tab-full right">
           <div class="timeline">
                    <div class="timeline__block">
                        <div class="timeline__bullet"></div>
                        <div class="timeline__header">
                            <p class="timeline__timeframe">@item.Date</p>
                            <h3>@item.Head</h3>
                            <h5>@item.Title</h5>
                        </div>
                        <div class="timeline__desc">
                            <p>
                                <img style="width:500px;height:250px" src="@Url.Content(item.ImgUrl)" alt="Logo" /><br />
                                @item.Description<br />
                                <b><a style="color:DodgerBlue;" href="@item.ProjectUrl">Projenin Github linki için tıklayınız.</a></b>
                            </p>
                        </div>
                    </div> <!-- end timeline__block -->
                </div> <!-- end timeline -->
            </div> <!-- end right -->
            <br />
            
        }
    }


   

</div>
</section>
