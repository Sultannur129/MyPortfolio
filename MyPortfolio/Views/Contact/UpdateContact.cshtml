@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="ContactId" />
							<label>Linkedin Linki</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Github Linki</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<label>Telefon 1</label>
							<input type="text" asp-for="Phone1" class="form-control" />
							<br />
							<label>Telefon 2</label>
							<input type="text" asp-for="Phone2" class="form-control" />
							<br />
							<label>Email 1</label>
							<input type="text" asp-for="Email1" class="form-control" />
							<br />
							<label>Email 2</label>
							<textarea rows="5" class="form-control" asp-for="Email2"></textarea>
							<br />
							<label>Adres</label>
							<textarea rows="5" class="form-control" asp-for="Address"></textarea>
							<br />
							<button class="btn btn-primary">İletişimi Güncelle</button>

						</form>

					</div>
				</div>


			</div>

		</div>
	</div>
</div>


